[init]
	defaultBranch = main
[color]
	ui = auto
[push]
  autoSetupRemote = true
  default = current
[pull]
	rebase = false
[core]
	editor = nvim
	pager = diff-so-fancy | less --tabs=4 -RF
	excludesfile = /home/carraes/.gitignore_global
[delta]
  line-numbers = true
  side-by-side = true
	navigate = true
[interactive]
	diffFilter = diff-so-fancy --patch
[merge]
	conflictStyle = zdiff3
[difftool "difft"]
	cmd = difft \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = true
